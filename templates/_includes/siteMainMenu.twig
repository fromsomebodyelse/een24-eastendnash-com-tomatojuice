{% set primaryMenuItems = [
    {label: 'Home', url: siteUrl('/') },
    {label: 'Blog', url: siteUrl('/blog') },
    {label: 'Bylaws', url: siteUrl('/bylaws') },
    {label: 'Officers', url: siteUrl('/officers') },
    {label: 'Meetings', url: siteUrl('/meeting') },
] %}

{# Promo spot #}
<div class="relative sm:flex sm:justify-center bg-black">
    <div class="relative px-3 py-1 text-sm leading-6 text-gray-400 bg-black/50">
        <p>Next Association Meeting <a href="{{ siteUrl('/meeting') }}" class="font-semibold text-white"><span class="absolute inset-0" aria-hidden="true"></span>June 10th<span aria-hidden="true">&rarr;</span></a></p>
    </div>
</div>
{# Main Menu #}
<div class="relative">
  <header class="absolute inset-x-0 top-0 z-50">

    <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
      {# Logo/Home #}
      <div class="flex lg:flex-1">
        <a href="#" class="-m-1.5 p-1.5">
          <span class="sr-only">East End Neighborhood Association</span>
        </a>
        {# TODO: Wordmark #}
      </div>
      {# Mobile Button #}
      <div class="flex lg:hidden" x-data>
        <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-white" @click="$dispatch('foo')">
          <span class="sr-only">Open main menu</span>
          <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
      {# Primary Menu #}
      <div class="hidden lg:flex lg:gap-x-12">
        {% for item in primaryMenuItems %}
            <a href="{{ item.url }}" class="text-sm font-semibold leading-6 text-white">{{ item.label }}</a>
        {% endfor %}
      </div>
      {# Secondary Menu #}
      <div class="hidden lg:flex lg:flex-1 lg:justify-end">
        {# <a href="#" class="text-sm font-semibold leading-6 text-white">Log in <span aria-hidden="true">&rarr;</span></a> #}
      </div>
    </nav>

    <!-- Mobile menu, show/hide based on menu open state. -->
    <div class="fixed lg:hidden" role="dialog" aria-modal="true"
      x-data="{open: false}"
      @foo.window="open=true"
    >
      <!-- Background backdrop, show/hide based on slide-over state. -->
      <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-gray-900 px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-white/10"
        x-show="open"
        x-cloak
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 translate-x-full"
        x-transition:enter-end="opacity-100 translate-x-0"
        x-transition:leave="transition ease-in duration-300"
        x-transition:leave-start="translate-x-0"
        x-transition:leave-end="translate-x-full"
      >
        <div class="flex items-center justify-between">
          <a href="#" class="-m-1.5 p-1.5">
            <span class="sr-only">East End Neighborhood Association</span>
          </a>
          <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-400" @click="open=false">
            <span class="sr-only">Close menu</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="mt-6 flow-root">
          <div class="-my-6">
            <div class="space-y-2 py-6">
              {% for item in primaryMenuItems %}
                <a href="{{ item.url }}" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-white hover:bg-gray-800">{{ item.label }}</a>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
</div>
